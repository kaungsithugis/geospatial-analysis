!pip install geopandas folium

import geopandas as gpd
import folium

#read the shapefile using geopandas
shapefile_path = '/content/drive/MyDrive/gis_data/mmr_polbnda_250k_adm1_mimu.shp'
gdf = gpd.read_file(shapefile_path)

# Get the geographical center of the shapefile data for setting the map's center
map_center = [gdf.centroid.y.mean(), gdf.centroid.x.mean()]

# Create the folium map centered on the geographical center
map_zoom = 5  # Adjust the zoom level as needed
mm = folium.Map(location=map_center, zoom_start=map_zoom)

# Convert the GeoDataFrame to GeoJSON format and add it as a layer to the map
geojson_data = gdf.__geo_interface__
folium.GeoJson(geojson_data).add_to(mm)

# Display the map in Google Colab
mm
